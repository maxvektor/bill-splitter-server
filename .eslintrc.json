{
  "env": {
    "jest/globals": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parser": "typescript-eslint-parser",
  "plugins": ["prettier", "typescript", "jest"],
  "settings": {
    "import/resolver": {
      "typescript": {}
    } 
  },
  "rules": {
    "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": ["**/**.spec.*"]
        }
      ]
  },
  "overrides": {
    "files": ["**/*.ts", "**/*.tsx"],
    "parser": "typescript-eslint-parser",
    "rules": {
      "no-undef": "off",
      "no-unused-vars": "off"
    }
  }
}
